<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:backgroundTint="@color/GrisOscuro">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:layout_weight="35"
            android:layout_margin="5dp"
            android:backgroundTint="@color/BlancoGrisaceo">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/GrisOscuro">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        android:background="@drawable/borde_textview">

                        <TextView
                            android:id="@+id/nombreUsuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="2"
                            android:gravity="right|center"
                            android:text="nombre"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="RtlHardcoded,TextSizeCheck" />

                        <TextView
                            android:id="@+id/apellidosUsuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="2"
                            android:gravity="left|center"
                            android:text="apellidos"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="RtlHardcoded,TextSizeCheck" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_textview">

                        <TextView
                            android:id="@+id/DNINAME"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="@string/DNITitulo"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/DNIUsuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/borde_textview"
                            android:gravity="center"
                            android:text="DNI"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_textview">

                        <TextView
                            android:id="@+id/fechaNacimientoNAME"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="@string/nacimientoTitulo"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/fechaNacimiento"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/borde_textview"
                            android:gravity="center"
                            android:text="FechaNacimiento"
                            android:textColor="@color/Blanco"
                            android:textSize="13sp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/botonRechazarTrabajador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/botonRechazar"
                    android:backgroundTint="@color/AzulClaro"
                    android:textColor="@color/Blanco"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />


                <Button
                    android:id="@+id/botonAceptarTrabajador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/botonAceptar"
                    android:backgroundTint="@color/AzulClaro"
                    android:textColor="@color/Blanco"/>
            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>