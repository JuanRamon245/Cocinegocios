<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancoGrisaceo"
    tools:context=".Fragmentos.IniciarSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagenInicioSesion"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@color/AzulClaro"
            android:padding="20dp"
            app:strokeWidth="10dp"
            app:contentPadding="10dp"
            app:shapeAppearanceOverlay="@style/RoundedCornersImageInicioSesion"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="3dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tituloGmailInicioSesion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/Negro"
                android:layout_marginLeft="5dp"
                android:text="@string/gmailTitulo"
                tools:ignore="RtlHardcoded">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                style="@style/TextInputLayoutCustomStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/campoGmailInicioSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="@color/Negro"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="3dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tituloContraseñaInicioSesion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/Negro"
                android:layout_marginLeft="5dp"
                android:text="@string/contraseñaTitulo"
                tools:ignore="RtlHardcoded">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:endIconMode="password_toggle"
                android:gravity="center"
                android:orientation="vertical"
                style="@style/TextInputLayoutCustomStyle"
                app:endIconTint="@color/AzulClaro">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ContraseñaInicioSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:textColor="@color/Negro"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/botonDeInicioDeSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:textSize="20sp"
            android:textColor="@color/BlancoGrisaceo"
            android:backgroundTint="@color/AzulClaro"
            android:text="@string/botonIniciarSesion">
        </Button>
    </LinearLayout>
</LinearLayout>