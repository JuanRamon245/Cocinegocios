<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:backgroundTint="@color/GrisOscuro">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_weight="35"
        android:layout_margin="5dp"
        android:backgroundTint="@color/BlancoGrisaceo">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/GrisOscuro">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nombreProducto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Nombre"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="@color/Blanco"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1.5">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/botonEliminarProducto"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:backgroundTint="@color/AzulClaro"
                    app:icon="@android:drawable/ic_delete"
                    app:iconSize="30dp"
                    app:iconTint="@color/Blanco"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="@drawable/borde_textview">
                <TextView
                    android:id="@+id/tituloCantidad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/tituloCantidad"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/Blanco"/>

                <Button
                    android:id="@+id/botonCambiarCantidadProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/BlancoGrisaceo"
                    android:backgroundTint="@color/AzulClaro"
                    android:text="1"/>
                <TextView
                    android:id="@+id/precioProducto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="Precio"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/Blanco"
                    android:background="@drawable/borde_textview"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>