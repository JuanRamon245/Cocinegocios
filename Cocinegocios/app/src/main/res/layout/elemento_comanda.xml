<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:backgroundTint="@color/GrisOscuro">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_weight="35"
        android:layout_margin="5dp"
        android:backgroundTint="@color/BlancoGrisaceo">

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@color/GrisOscuro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:background="@drawable/borde_textview">
            <TextView
                android:id="@+id/tituloComanda"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/comandaSeÃ±aTitulo"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/Blanco"/>
            <TextView
                android:id="@+id/idComanda"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="id"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/Blanco"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@color/GrisOscuro">
                <ImageView
                    android:id="@+id/estadoComanda"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:src="@android:drawable/ic_menu_help" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/borde_textview">
            <TextView
                android:id="@+id/titularEspacio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/zonaTitular"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/Blanco"/>
            <TextView
                android:id="@+id/contenidoEspacio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="zona"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/Blanco"
                android:background="@drawable/borde_textview"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            tools:ignore="DisableBaselineAlignment">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="@drawable/borde_textview">
                <TextView
                    android:id="@+id/titularMesas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/titularMesas"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/Blanco"/>
                <TextView
                    android:id="@+id/numeroMesas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="mesa"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/Blanco"
                    android:background="@drawable/borde_textview"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_weight="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/botonInformacionComanda"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:backgroundTint="@color/AzulClaro"
                    app:icon="@android:drawable/ic_dialog_info"
                    app:iconSize="20dp"
                    app:iconTint="@color/Blanco"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>