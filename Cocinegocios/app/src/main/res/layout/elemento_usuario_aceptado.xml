<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:backgroundTint="@color/GrisOscuro">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:layout_weight="35"
            android:layout_margin="5dp"
            android:backgroundTint="@color/GrisOscuro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:background="@color/GrisOscuro">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/borde_textview"
                            android:layout_weight="4">
                            <TextView
                                android:id="@+id/nombreUsuario"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="nombre"
                                android:gravity="right|center"
                                android:layout_margin="4dp"
                                android:textSize="13sp"
                                android:textColor="@color/Blanco"
                                tools:ignore="RtlHardcoded" />

                            <TextView
                                android:id="@+id/apellidosUsuario"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="apellidos"
                                android:gravity="left|center"
                                android:layout_margin="4dp"
                                android:textSize="13sp"
                                android:textColor="@color/Blanco"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_weight="1.5">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/botonMasInformacionUsuario"
                                style="@style/Widget.Material3.Button.IconButton.Filled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="16dp"
                                android:backgroundTint="@color/AzulClaro"
                                app:icon="@android:drawable/ic_dialog_info"
                                app:iconSize="20dp"
                                app:iconTint="@color/Blanco"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_textview">
                        <TextView
                            android:id="@+id/oficioTexto"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/oficioTexto"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/Blanco"/>
                        <TextView
                            android:id="@+id/oficioUsuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="ofc"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/Blanco"
                            android:background="@drawable/borde_textview"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_textview">
                        <TextView
                            android:id="@+id/fechaNacimientoNAME"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/edadTitulo"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/Blanco"/>
                        <TextView
                            android:id="@+id/edadUsuario"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="numb"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/Blanco"
                            android:background="@drawable/borde_textview"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</LinearLayout>